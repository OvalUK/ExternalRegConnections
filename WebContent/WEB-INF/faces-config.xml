<?xml version="1.0" encoding="UTF-8"?>
<faces-config>
  <managed-bean id="settings">
    <managed-bean-name>settings</managed-bean-name>
    <managed-bean-class>com.uk.oval.tools.Settings
		</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean id="securesettings">
    <managed-bean-name>securesettings</managed-bean-name>
    <managed-bean-class>com.uk.oval.tools.Settings
		</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>secure</property-name>
      <value>true
			</value>
    </managed-property>
  </managed-bean>
  <managed-bean id="settingstest">
    <managed-bean-name>settingstest</managed-bean-name>
    <managed-bean-class>com.uk.oval.tools.Settings
		</managed-bean-class>
    <managed-bean-scope>view</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>log</managed-bean-name>
    <managed-bean-class>eu.linqed.debugtoolbar.DebugToolbar
		</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    <managed-property>
      <property-name>logDbPath</property-name>
      <value>#{settings.log_db.value1}
			</value>
    </managed-property>
    <managed-property>
      <property-name>logEnabled</property-name>
      <value>#{settings.log_enabled.value1}
			</value>
    </managed-property>
    <managed-property>
      <property-name>logLevel</property-name>
      <value>#{settings.log_level.value1}
			</value>
    </managed-property>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>emailBean</managed-bean-name>
    <managed-bean-class>com.ibm.xsp.utils.EmailBean
		</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>debugMode</property-name>
      <value>false</value>
    </managed-property>
  </managed-bean>
  <application>
    <variable-resolver>com.uk.oval.tools.BaseVariableResolver
		</variable-resolver>
  </application>
  <!--  ################################# -->
  <!--   Social Business Toolkit - Connections -->
  <managed-bean>
    <managed-bean-name>CredStore</managed-bean-name>
    <managed-bean-class>com.ibm.sbt.security.credential.store.MemoryStore</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>PasswordStore</managed-bean-name>
    <managed-bean-class>com.ibm.sbt.security.credential.store.MemoryStore</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>connections</managed-bean-name>
    <managed-bean-class>com.ibm.sbt.services.endpoints.ConnectionsBasicEndpoint</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    <managed-property>
      <property-name>url</property-name>
      <value>#{settings.connections_url.value1}</value>
    </managed-property>
    <managed-property>
      <property-name>authenticationService</property-name>
      <value>communities/service/atom/communities/all</value>
    </managed-property>
    <managed-property>
      <property-name>authenticationPage</property-name>
      <value>/dev/connections.nsf/_BasicLogin.xsp?endpoint=connections</value>
    </managed-property>
  </managed-bean>
  <!--  ######## -->
  <managed-bean>
    <managed-bean-name>validators</managed-bean-name>
    <managed-bean-class>com.uk.oval.registrations.Validators
		</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <!--AUTOGEN-START-BUILDER: Automatically generated by IBM Domino Designer. Do not modify.-->
  <!--AUTOGEN-END-BUILDER: End of automatically generated section-->
</faces-config>
